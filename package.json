{
  "name": "html-snippet-previewer",
  "displayName": "HTML Snippet Previewer",
  "description": "Preview HTML code snippets from any file type in real-time",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "author": {
    "name": "Your Name"
  },
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/html-snippet-previewer.git"
  },
  "homepage": "https://github.com/your-username/html-snippet-previewer#readme",
  "bugs": {
    "url": "https://github.com/your-username/html-snippet-previewer/issues"
  },
  "keywords": [
    "html",
    "preview",
    "snippet",
    "viewer",
    "render",
    "python",
    "javascript",
    "modelica"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onCommand:html-snippet-previewer.preview",
    "onCommand:html-snippet-previewer.previewToSide"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "html-snippet-previewer.preview",
        "title": "Preview HTML Snippet",
        "category": "HTML Snippet Previewer"
      },
      {
        "command": "html-snippet-previewer.previewToSide",
        "title": "Preview HTML Snippet to Side",
        "category": "HTML Snippet Previewer"
      },
      {
        "command": "html-snippet-previewer.debug",
        "title": "Show Debug Information",
        "category": "HTML Snippet Previewer"
      }
    ],
    "keybindings": [
      {
        "command": "html-snippet-previewer.preview",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h"
      },
      {
        "command": "html-snippet-previewer.previewToSide",
        "key": "ctrl+shift+alt+h",
        "mac": "cmd+shift+alt+h"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "html-snippet-previewer.preview",
          "group": "navigation"
        },
        {
          "when": "editorHasSelection",
          "command": "html-snippet-previewer.previewToSide",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "HTML Snippet Previewer",
      "properties": {
        "htmlSnippetViewer.enableAutoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic refresh when selection changes"
        },
        "htmlSnippetViewer.previewPosition": {
          "type": "string",
          "enum": ["beside", "active"],
          "default": "beside",
          "description": "Default position for the preview panel"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "14.x",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.19.0",
    "mocha": "^8.3.2",
    "typescript": "^4.1.3",
    "@vscode/test-electron": "^1.6.2"
  }
}